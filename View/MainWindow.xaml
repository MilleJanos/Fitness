<Window x:Class="Fitness.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:selector="clr-namespace:View.TemplateSelector"
        mc:Ignorable="d" Background="White"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View;component/Resources/Style.xaml"/>
                <ResourceDictionary Source="/View;component/Resources/FitnessContentTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <selector:ContentSelector x:Key="TemplateSelector"/>
        </ResourceDictionary>
    </Window.Resources>

    <ScrollViewer>
        
        <Grid>

            <Grid Visibility="{Binding LoginVisibility , Converter={StaticResource BooleanToVisibilityConverter}}">

                <TextBlock Text="TODO: Login Pange"></TextBlock>
                
                <!-- DOTO: Andi -->
                
            </Grid>

            <Grid  Visibility="{Binding HomeVisibility , Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>


                <StackPanel Grid.Row="1" 
                            Grid.Column="1"
                            Orientation="Vertical">

                    <TabControl Grid.Row="1"
                                Grid.Column="1"
                                ItemsSource="{Binding Contents}"
                                SelectedItem="{Binding SelectedContent, Mode=TwoWay}"
                                ContentTemplateSelector="{StaticResource TemplateSelector}">


                    </TabControl>

                    <!-- Row 1 -->
                    <TextBlock Text="{Binding PageTitle, Mode=OneWay}" MinWidth="100" Margin="4" FontSize="15" TextAlignment="Center"></TextBlock>

                    <!-- Row 2 -->
                    <TextBox Text="{Binding PageTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinWidth="100" Margin="4" FontSize="15"/>


                </StackPanel>


                <Button Grid.Row="3" 
                        Grid.Column="3" 
                        Content="Exit" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Margin="10" Padding="20 2 20 2" 
                        Command="{Binding CloseCommand}"/>


            </Grid>
          
            
        </Grid>
    </ScrollViewer>
    

</Window>